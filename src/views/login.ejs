<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: "Panel de Ingreso"}) %>
<body>
    <%- include('partials/header') %>

    <main class="panelDeIngreso">
        <section>
            <h2>Panel de Ingreso</h2>
        </section>

        <section class="form">
            <form action="" method="POST">
                <div>
                    <label for="email">Correo Electrónico</label>
                    <input id="email" name="email" type="email" placeholder="ingrese aquí su correo electrónico...">
                </div>
                <div>
                    <label for="password">Contraseña</label>
                    <input id="password" name="password" type="password" placeholder="Contraseña">
                </div>
                <div class="cta-panel">
                    <div>
                        <a href="/users/olvide-contrasena">Olvidé la contraseña
                        </a>
                        <a href="/users/register">Crear cuenta nueva</a>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">INGRESAR</button>
                    </div>
                </div>
            </form>
        </section>

    </main>

    <%- include('partials/footer') %>
    
</body>
</html>