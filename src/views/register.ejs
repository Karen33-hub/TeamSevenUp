<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: "Registro de Cliente"}) %>
<body>
    <%- include('partials/header') %>

    <main class="panelDeIngreso">
        <section>
            <h2>Registro de cliente</h2>
        </section>

        <section class="form">
            <form action="" method="POST">
                
                <div>
                    <label for="name">Nombre</label>
                    <input id="name" name="name" type="text" placeholder="nombre...">
                </div>                
                <div>
                    <label for="apellido">Apellido</label>
                    <input id="apellido" name="apellido" type="text" placeholder="apellido...">
                </div> 

                <div>
                    <label for="email">Correo Electrónico</label>
                    <input id="email" name="email" type="email" placeholder="ingrese aquí su correo electrónico...">
                </div>
                <div>
                    <label for="password">Contraseña</label>
                    <input id="password" name="password" type="password" placeholder="Contraseña">
                </div>
                <div class="cta-panel">
                    <div>
                        <a href="/users/login">¿Ya tenés usuario?</a>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">CREAR USUARIO</button>
                    </div>
                </div>
                <hr>
                <div class="alternative-login-panel">
                    <a href="#" class="facebook-login">
                        <i class="fab fa-facebook-f"></i>
                        <p>Ingresa con Facebook</p>
                    </a>
                    <a href="#" class="google-login">
                        <i class="fab fa-google"></i>
                        <p>Ingresa con Google</p>
                    </a>
                </div>
            </form>
        </section>
    </main>

    <%- include('partials/footer') %>
    
</body>
</html>